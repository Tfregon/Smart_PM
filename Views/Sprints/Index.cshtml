@model IEnumerable<Smart_PM.Models.Sprint>

<h1>Sprints</h1>
<a asp-action="Create" class="btn btn-primary">Create New Sprint</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Project</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sprint in Model)
        {
            <tr>
                <td>@sprint.Title</td>
                <td>@sprint.Project?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sprint.SprintId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@sprint.SprintId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
