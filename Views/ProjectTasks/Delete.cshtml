@model Smart_PM.Models.ProjectTask

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Data de Entrega</dt>
        <dd class="col-sm-10">@Model.DueDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Prioridade</dt>
        <dd class="col-sm-10">@Model.Priority</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Tag</dt>
        <dd class="col-sm-10">@Model.Tag</dd>

        <dt class="col-sm-2">Sprint</dt>
        <dd class="col-sm-10">@Model.Sprint?.Title</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProjectTaskId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
